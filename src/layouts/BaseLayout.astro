  bodyClass = "index-page",
} = Astro.props;

const pathname = Astro.url.pathname;
const isIndex = pathname === "/" || pathname === "/index.html";
const navBase = isIndex ? "" : "index.html";
const navHref = (hash) => `${navBase}${hash}`;
